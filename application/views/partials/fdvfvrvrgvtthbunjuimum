<div id="edit">
		<input type="text" name="">
</div>
<script type="text/javascript">
	

$('td').click(function(e){
var th = $('.content table th')[$(this).index()];

var module = $(th).html();
var name = $(this).parent().find('.name').html();

var template = '<div style="position: relative; top: auto; left: auto; margin: 0 auto; z-index: 1" class="modal"><div class="modal-header"><h3>'+ name +'</h3><a class="close" href="#">×</a></div><div class="modal-body"><label for="module">'+ module +'</label><input type="text" id="module" name = "module" value = "'+ $(this).html()+'"></div><div class="modal-footer"><a class="btn primary" href="#">Primary</a><a class="btn secondary" href="#">Secondary</a></div></div>'
$('.content').append(template);
});
$('.close').click(function(){
	$('.modal').remove();
});
</script>
		<div style="position: relative; top: auto; left: auto; margin: 0 auto; z-index: 1" class="modal">
          <div class="modal-header">
            <h3>Modal Heading</h3>
            <a class="close" href="#">×</a>
          </div>
          <div class="modal-body">
            <p>One fine body…</p>
          </div>
          <div class="modal-footer">
            <a class="btn primary" href="#">Primary</a>
            <a class="btn secondary" href="#">Secondary</a>
          </div>
        </div>